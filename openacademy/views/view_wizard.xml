<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">openacademy.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Attendees">
                    <group>
                        <field name="session_ids"/>
                        <field name="attendee_ids"/>
                    </group>
                    <!--Se agrega botones a la parte del pie del attendee-->
                    <footer>
                        <button name="subscribe" type="object" string="Subscribe" class="oe_highlight"/> or                                            
                        <button special="cancel" string="Cancel"/>
                        <hr>Hola puedes agregar o cancelar</hr>                
                        </footer>
                    </form>
                </field>
            </record>
            <act_window id="launch_session_wizard" name="Add Attendees" src_model="openacademy.session" res_model="openacademy.wizard" view_mode="form" target="new" key2="client_action_multi"/>
        </data>
    </odoo>